{
  "name": "swisher",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reach/router": "^1.1.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-qr-svg": "^2.1.0",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "build:css": "postcss src/styles/index.css -o src/index.css",
    "watch:css": "postcss src/styles/index.css -o src/index.css -w",
    "start": "npm run watch:css & react-scripts start",
    "build": "NODE_ENV=production npm run build:css && react-scripts build",
    "deploy": "npm run build && firebase deploy --only hosting",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.1",
    "postcss-cli": "^5.0.0",
    "tailwindcss": "^0.5.3"
  }
}
